# Syd Salmon's zsh configuration: alias list

# aliases
## global
alias -g lsd='ls -aFGhort' # sort, descending, DATE
alias -g lsn='ls -aFGhor'  # sort, descending, NAME
alias -g lss='ls -aFGhorS' # sort, descending, SIZE
alias -g nv='/Users/syd/Dropbox/nvalt-repo'
alias -g fz='; printf "\033c\n" ; lsd | grep --invert-match "dr.*" | tail -10'
alias -g iz='; printf "\033c\n" ; lsd | grep --invert-match "\..*" | tail -10'
# fz = [f]iles: show 10 most recent; clear screen, insert newline
# iz = [i]tems: show 10 most recent; clear screen, insert newline

## simple

alias ....='cd ../../../'              # go up three levels
alias ...='cd ../../'                  # go up two levels
alias ..='cd ../'                      # go up one level
alias {bc,calc}='bc --mathlib --quiet' # calculator
alias {brewster='zsh /Users/syd/Code/misc/Brewster/brewster.zsh'
alias {bric='brew install --cask'               # install Homebrew cask (GUI app)
alias brif='brew install'                       # install Homebrew formulae (CL app)
alias brs='brew search'                         # search Homebrew
alias cdl='cl'                                  # clear screen, cd, sort by date
alias cls='printf "\033c\n"'                    # clear screen via ^L
alias cntf='find . -type f -maxdepth 1 | wc -l' # files: count FILES in dir
alias cnti='find . -maxdepth 1 | wc -l'         # items: count ITEMS in dir
alias cpv='rsync -ah --info=progress2'          # copy, readable xfer stats
alias diff='colordiff -u'                       # compare lines, unify context
alias dirs='dirs -v'                            # list dir stack w/ index number
alias gitp='git push ; git status'
alias gits='git status'
alias grep='grep -i --color=auto'               # set case -[i]nsensitive
alias h='history'
alias ip='curl -sw "\n" https://ifconfig.me/ip|tee >(tr -d "\n"|pbcopy)'
alias j='jobs -l'
alias ls='ls -alh'                                # NB: remaps default ls
alias meteo='bash /Users/syd/Code/meteo/meteo.sh' # show weather
alias misd='/Users/syd/Code/misc ; iz'            # mnemonic: misc. directory
alias mkdir='mkdir -pv'                           # create, list dirs, if req'd
alias nvad='/Users/syd/Dropbox/nvalt-repo ; iz'   # mnemonic: nvALT repo dir
alias osa='open /Applications/Signal.app'
alias osk='open /Applications/Sidekick.app'
alias owa='open /Applications/WhatsApp.app'
alias path='printf ${PATH//:/\\n}"\n"'          # show binary directories
alias pcd='printf "$PWD\n"|tee /dev/tty|pbcopy' # print current dir
alias pd='pushd'                                # stack dirs, toggle dirs
alias png='ping -c10 1.1.1.1'                   # send 10 packets
alias rca='vim /Users/syd/.zsh_aliases'         # edit zsh aliases
alias rcf='vim /Users/syd/.zsh_functions'       # edit zsh functions
alias rcp='vim /Users/syd/.zsh_plugins'         # edit zsh plugins
alias rcv='vim /Users/syd/.vimrc'               # edit vim config
alias rcz='vim /Users/syd/.zshrc'               # edit zsh config
alias rm='printf "%s\n" "" "@@@--> WARNING <--@@@" "Do no use ${(%):-%F{red}rm${(%):-%f{red}. Use one of:" "" "${(%):-%F{green}|> trh${(%):-%f{green}" "|> sudo rm -Rfd"'
alias {rp,readlink}='realpath -m pbpaste|tee /dev/tty|pbcopy' # canonical absolute path
alias scanz='zsh /Users/syd/Code/misc/scanz/scanz.sh'
alias smartrg='ssh -oKexAlgorithms=+diffie-hellman-group1-sha1 admin@192.168.1.1'
alias songd='/Users/syd/Dropbox/nvalt-repo/music/songs'          # song dir
alias songo='/Users/syd/Dropbox/nvalt-repo/music/songs/original' # originals
alias src='. /Users/syd/.zshrc'                                  # source zsh
alias teux='vim /Users/syd/Dropbox/nvalt-repo/teuxdeux.md'       # open To Do list
alias trh='trash'                                                # trash item(s)
alias {v,vi}='vim'
alias wttr='curl https://wttr.in/YKF\?F --silent --max-time 3'   # weatherForecast
alias zcalc='zcalc -f -r4' # floating point, four stack elements
alias zcp='zmv -C'   # ~ cp -f (copy, force)
alias zln='zmv -L'   # ~ ln -f (hard link, force)
alias zls='zmv -Ls'  # ~ ln -sf (symbolic link, force)

## privileged access
if [[ "$UID" -ne 0 ]]; then
    alias dgk='sudo spctl --master-disable # disable Gatekeeper'
    alias egk='sudo spctl --master-enable # enable Gatekeeper'
    alias rms='printf "%s\n" "@@@--> WARNING <--@@@" "Do not use $(tput bold)${(%):-%F{red}rm${(%):-%f}$(tput sgr0)." "Use $(tput bold)${(%):-%F{green}|> trh <|${(%):-%f}$(tput sgr0) or sudo rm -Rfd"'
    alias sd='sudo shutdown -h +1 "-> SHUTTING DOWN <-\n->  To abort, type ^c."'
    alias sr='sudo shutdown -r now "-> REBOOTING <-\n->  To abort, type ^c."'
    alias svi='sudo vi'
    alias topc='sudo htop -s PERCENT_CPU' # sort running processes by CPU%
    alias topm='sudo htop -s PERCENT_MEM' # sort running processes by MEM%
fi

## suffix
alias -s {css,html,js,md,sh,zsh,,}='code' # open file.{ext} in VSCode

